<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/simple-sidebar.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
  <body>
    <div class="d-flex" id="wrapper">
      <div class="bg-light border-right" id="sidebar-wrapper">
      
      <nav class="navbar navbar-default navbar-fixed-top">
        
          <div >
              <a href="/clientes" class="list-group-item list-group-item-action bg-light">CLIENTES</a>
          </div>
          <div>
              <a href="/mecanico_responsable" class="list-group-item list-group-item-action bg-light">MECANICOS</a>
          </div>
          <div>
              <a href="/repuestos" class="list-group-item list-group-item-action bg-light">REFACCIONES</a>
          </div>
          <div>
              <a href="/factura" class="list-group-item list-group-item-action bg-light">TRANSACCIONES</a>
          </div>
        </div>
     
      </nav>
      <div id="page-content-wrapper" >        
        <div class="container-fluid" >
          <h1 class="mt-4 mb-3">Seccion de Clientes</h1>
          <div class="row">
              <div class="col-lg-4 mb-4" >
                <div class="card h-100 text-center">

                  <div class="card-body">
                    <h4 class="card-title">AGREGAR CLIENTE</h4>
                    <h6 class="card-subtitle mb-2 text-muted">AÃ±adir cliente a la base de datos del taller</h6>
                    <a href="/clientes/crear" class="btn btn-success">Agregar Cliente</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 mb-4">
                <div class="card h-100 text-center">
                  
                  <div class="card-body">
                    <h4 class="card-title">APARTADO VEHICULOS</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Manejo de Vehiculos en el sistema</h6>
                    <a href="/vehiculos" class="btn btn-success">Ir a Vehiculos</a>
                  </div>
                </div>
              </div>
            </div>
            <div>
              <div class=" text-center">
                <h3>CLIENTES REGISTRADOS</h3>
                <br><br>
              </div>
                <table class="table">
                  <thead>
                    <tr>
                      <th>RFC CLIENTE</th>
                      <th>NOMBRE</th>
                      <th>DIRECCION</th>
                      <th>TELEFONO</th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    @each(cliente in clientes)
                      <tr>
                        <td>{{cliente.id}}</td>
                        <td>{{cliente.NOMBRE}}</td>
                        <td>{{cliente.DIRECCION}}</td>
                        <td>{{cliente.TELEFONO}}</td>
                        <td>
                          
                            <a class="btn btn-info" href="/clientes/editar/{{cliente.id}}">Editar</a>
                         
                        </td>
                        <td>
                          
                            <a class="btn btn-danger" href="/clientes/eliminar/{{cliente.id}}">Eliminar</a>
                         
                        </td>
                        </td>
                      </tr>
                    @endeach
                  </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="jquery/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
      $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
      });
    </script>
  </body>
</html>
